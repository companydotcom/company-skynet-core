{
  "compilerOptions": {
    "lib": ["es2017"],
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts",
    "src/index.ts",
    "src/library/util.ts",
    "src/library/throttle.ts",
    "src/library/queue.ts",
    "src/library/eventStream.ts",
    "src/library/dynamo.ts",
    "dist/index.js",
    "src/handlers/setupDatabase.ts",
    "src/handlers/getPostHttp.ts",
    "tests/*.ts",
  ],
  "exclude": ["node_modules/**/*", ".webpack/**/*", "_warmup/**/*", ".vscode/**/*"]
}
